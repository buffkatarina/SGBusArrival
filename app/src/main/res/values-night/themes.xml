<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BusArrival" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_100</item>
        <item name="colorPrimaryVariant">@color/grey_50</item>
        <item name="colorOnPrimary">@color/black_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lime</item>
        <item name="colorOnSecondary">@color/black_100</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
</resources>