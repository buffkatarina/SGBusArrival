<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:id="@+id/busTimings"
    app:contentPaddingLeft="10dp"
    app:contentPaddingTop="5dp"
    app:contentPaddingBottom="5dp"
    app:contentPaddingRight="20dp"
    style="@style/Card">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/serviceNoFrame"
            android:layout_marginStart="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/serviceNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:gravity="center"/>
        </FrameLayout>

        <ImageButton
            android:id="@+id/favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/favourite_selector"
            app:layout_constraintEnd_toStartOf="@+id/nextBusFrame"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/nextBusFrame"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toStartOf="@+id/nextBus2Frame"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/nextBus"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toStartOf="@+id/nextBus3Frame"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/nextBus2Frame">
            <TextView
                android:id="@+id/nextBus2"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/nextBus3Frame"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/nextBus3"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"/>
        </FrameLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>




</com.google.android.material.card.MaterialCardView>